<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:padding="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fillter by categories"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/sv_rb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:id="@+id/sv_rb"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_letter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_rb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioGroup
                    android:id="@+id/rg_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <RadioButton
                        android:id="@+id/rb_beef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beef"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_chicken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chicken"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_dessert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dessert"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_vegetarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetarian"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_miscellaneous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miscellaneous"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_pork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pork"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_seafood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seafood"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_starter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starter"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_side"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Side"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_Dismis_categories"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Dismis"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sv_rb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
