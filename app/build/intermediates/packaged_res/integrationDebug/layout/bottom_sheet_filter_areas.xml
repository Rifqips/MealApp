<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:padding="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fillter by areas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/sv_rb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:id="@+id/sv_rb"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_letter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_areas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioGroup
                    android:id="@+id/rg_areas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <RadioButton
                        android:id="@+id/rb_american"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="American"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_British"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="British"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_canadian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Canadian"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_chinese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chinese"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_dutch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dutch"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_filipino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filipino"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_french"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="French"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_indian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indian"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_italian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Italian"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_jamaican"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jamaican"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_mexican"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mexican"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_polish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Polish"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_russian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Russian"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rb_vietnamese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vietnamese"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_Dismis_areas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Dismis"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sv_rb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
